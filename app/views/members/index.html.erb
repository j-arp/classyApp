<h1>Listing members</h1>

<table>
  <tr>
    <th>Team</th>
    <th>Student</th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.team.name %></td>
    <td><%= member.student.full_name %></td>
    <td><%= link_to 'Clear', member, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Back to Teams', teams_path %>
