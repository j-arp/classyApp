<h1>Students</h1>

<div id="top-actions">
    <%=  link_to "View Students", students_path %>
</div>

<table class="table table-bordered table-striped table-hover">
  <tr>
    <th></th>
    <th>First</th>
    <th>Last</th>
    <th>Nickname</th>
    <th>Netid</th>
    <th>Classification</th>
    <th>Major</th>
    
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= image_tag student.image_url, :width => 76 %></td>

    <td><%= student.first %></td>
    <td><%= student.last %></td>
    <td><%= student.nickname %></td>
    <td><%= student.netid %></td>
    <td><%= student.classification.name %></td>
    <td><%= student.major.name %></td>
    
    
    <td>
        <%= link_to 'Show', student, :class => 'btn btn-small' %>
        <%= link_to 'Edit', edit_student_path(student), :class => 'btn btn-small' %>
        <%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-small' %>
    </td>
  
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Student', new_student_path %>
