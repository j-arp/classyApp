<h1><%= @students.count %> Students</h1>

<div id="top-actions">
	<%= link_to "View as list", student_list_path %> | 
	<%= link_to "Add Student", new_student_path %>
</div>

<div class="span12">
	
	<% @students.each do | student | %>
		<div class="span4">
		<%= render  student %>
		</div
	<% end %>

</div>

<div id="bottom-actions">
	<%= link_to 'New Student', new_student_path %>
</div>