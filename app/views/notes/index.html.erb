<h1>Notes on <%= @student.full_name %></h1>

<% @notes.each do |note| %>
    <div class="well">
    <%= note.content %>
    
    <div class="well-actions">
      <%= link_to 'Show', student_notes_path(note), :class => "btn btn-small" %>
      <%= link_to 'Edit', edit_student_note_path(@student, note), :class => "btn btn-small" %>
      <%= link_to 'Destroy', student_notes_path(note), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small" %>
    </div>

  </div>
<% end %>
<div id="bottom-actions">
  <%= link_to 'New Note', new_student_note_path, :class => "btn primary-btn" %>
</div>
